{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "./dist",
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ],
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "baseUrl": ".",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true
  },
  "include": ["./src/**/*"]
}